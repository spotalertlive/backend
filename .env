cd ~/backend && cat > .env <<'EOF'
# ==========================
# CORE SETTINGS
# ==========================
PORT=3000
NODE_ENV=production

# MUST match server.js usage
API_BASE_URL=https://api.spotalert.live
FRONTEND_URL=https://spotalert.live

# ==========================
# AWS SETTINGS
# ==========================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=REPLACE_ME
AWS_SECRET_ACCESS_KEY=REPLACE_ME

# S3 + Rekognition (USED EVERYWHERE)
S3_BUCKET=spotalert-live
REKOG_COLLECTION_ID=SpotAlertCollection

# ==========================
# SES / EMAIL SETTINGS
# ==========================
SES_FROM_EMAIL=aispotalert@gmail.com
ALERT_SUBJECT=[SpotAlert] Unknown Face Detected

# ==========================
# TOKEN / SECURITY
# ==========================
JWT_SECRET=REPLACE_ME_LONG_RANDOM

# ==========================
# ADMIN (REQUIRED BY server.js)
# ==========================
ADMIN_USER=admin
ADMIN_PASS=admin_password_change_later

# ==========================
# STRIPE (USED BY BILLING ROUTES)
# ==========================
STRIPE_SECRET_KEY=REPLACE_ME
STRIPE_WEBHOOK_SECRET=REPLACE_ME

# Stripe price IDs (server.js expects these)
STRIPE_PRICE_STANDARD=price_standard_id
STRIPE_PRICE_PREMIUM=price_premium_id
STRIPE_PRICE_ELITE=price_elite_id

# ==========================
# ALERT CONTROL
# ==========================
UNKNOWN_ALERT_COOLDOWN_MINUTES=5
MAX_ALERTS_PER_USER=100
EOF
